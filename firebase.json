{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs20",
      "codebase": "default",
      "predeploy": []
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/fn/analyzeAssetCapabilities",
        "function": "analyzeAssetCapabilities"
      },
      {
        "source": "/fn/generateProductNames",
        "function": "generateProductNames"
      },
      {
        "source": "/fn/generateProductContent",
        "function": "generateProductContent"
      },
      {
        "source": "/fn/generateDiscoverabilityData",
        "function": "generateDiscoverabilityData"
      },
      {
        "source": "/fn/auditShopifyProduct",
        "function": "auditShopifyProduct"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
