# =============================================================================
# DAWINOS v2.0 ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment
VITE_APP_ENV=development
VITE_APP_NAME=DawinOS
VITE_APP_VERSION=2.0.0

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulator (Development)
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=8080
VITE_AUTH_EMULATOR_PORT=9099
VITE_STORAGE_EMULATOR_PORT=9199

# Google APIs
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# AI Configuration (Google Gemini)
VITE_GEMINI_API_KEY=your_gemini_api_key
VITE_AI_ENABLED=true
VITE_AI_MODEL=gemini-pro

# Feature Flags
VITE_FEATURE_INTELLIGENCE=true
VITE_FEATURE_HR_CENTRAL=true
VITE_FEATURE_CEO_STRATEGY=true
VITE_FEATURE_FINANCIAL=true
VITE_FEATURE_STAFF_PERFORMANCE=true
VITE_FEATURE_CAPITAL_HUB=true
VITE_FEATURE_MARKET_INTELLIGENCE=true
VITE_FEATURE_OFFLINE_MODE=true

# Uganda-Specific Configuration
VITE_DEFAULT_CURRENCY=UGX
VITE_DEFAULT_LOCALE=en-UG
VITE_DEFAULT_TIMEZONE=Africa/Kampala

# Analytics & Monitoring
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ANALYTICS_ENABLED=true
VITE_PERFORMANCE_MONITORING=true

# Notion API (used in Firebase Functions)
NOTION_API_KEY=your_notion_api_key
